<div class="infogame row text-center">

  <h1>Niveau <%= @console.id %> : <%= @console.title %></h1>
  <h4><em>clique sur l'image pour commencer le cours</em></h4>
  <br>
  <% if @videok.count == 0 %>
    <h1>Il n'y a pas encore de cours dans cette classe.</h1>
  <% else %>
    <% @videok.each do |video| %>

    <div class="infogame col-xs-5 text-left">
      <div class="pull-right">
        <h2>Cours #<%= video.id %></h2>
        <h4><%= video.title %></h4>
        <br>
        <p><strong>Console :</strong> <%= @console.title %></p>
        <p><strong>Sortie (Fr) :</strong> <%= l(video.release, format: "%b %y" ) %></p>
        <p><strong>Genre :</strong> <%= video.genre %></p>
        <p><strong>Joueur(s) :</strong> <%= video.player %></p>
        <p><strong>DÃ©veloppeur :</strong> <%= video.developer %></p>
      </div>
    </div>
    <br>

      <div class="col-xs-7">
        <div class="<%= video.style %> img-responsive">
          <a href="/videos/<%= video.id %>">
            <p><%= image_tag video.video_img.url(:medium), class:"#{video.style} img-responsive center-block" %><p>
          </a>
        </div>
        <%= paginate @videok %>
      </div>
    <% end %>
  <% end %>

</div>

<div class="text-center">
  <a class="btn btn-default" href="/pages/videos" role="button">Retour</a>
</div>
