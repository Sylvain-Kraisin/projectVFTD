<div class="row text-center margin_top20 margin_bot150">
  <div class="col-xs-12 col-md-9">
    <h2 style="color:white" class="feutretext"><%= @video.title %></h2>
    <div class="videoWrapper col-xs-12">
      <iframe width="560" height="349" src="<%= @video.link %>" frameborder="0" allowfullscreen ></iframe>
    </div>
  </div>

  <div class="col-xs-12 col-md-3">
    <br>
    <p><%= link_to "Retour", console_path(@video.console_id), class: "btn btn-default", role: "button" %></p>
    <br>
  </div>


  <div class="text-center">
    <div class="image col-xs-12 col-md-3">
      <% if user_signed_in? %>
        <% if Reponse.exists?(test_id: @test.id, user_id: @user.id, total: nil) %>
          <img src="<%= asset_path( 'dstlink.png' ) %>" alt="DST" id="dstlink"></img>
          <div id="dsttext"><br>
          <h4>DST déjà passé<br><br>...<br>Correction en cours<br>...</h4>
          </div>
        <% elsif Reponse.exists?(test_id: @test.id, user_id: @user.id) %>
          <img src="<%= asset_path( 'dstlink.png' ) %>" alt="DST" id="dstlink"></img>
          <div id="dsttext"><br>
          <h4>DST déjà passé<br><br>...<br>Tu as eu<br><span class="craietext" style="color:red"><%= number_to_human(@reponse.total) %>/10</span><br>
            <br><a href="/tests/<%= @reponse.test_id %>/reponses/<%= @reponse.id %>">Voir la correction</a>
          </h4>
          </div>
        <% else %>
          <a href="/tests/<%= @test.id %>/reponses/new"><img src="<%= asset_path( 'dstlink.png' ) %>" alt="DST" id="dstlink">
          <div id="dsttext">
          <h4>Passe ton DST<br>une fois le cours<br>visionné...<br>
          <img id="dstimg" src="<%= asset_path( 'pixelsite.png' )%>"></img>

          </h4>
          </a>
          </div>
        <% end %>
      <% else %>
        <a href="/tests/<%= @test.id %>/reponses/new"><img src="<%= asset_path( 'dstlink.png' ) %>" alt="DST" id="dstlink">
        <div id="dsttext">
        <h4>Passe ton DST<br>une fois le cours<br>visionné...<br>
        <img id="dstimg" src="<%= asset_path( 'pixelsite.png' )%>"></img>

        </h4>
        </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
