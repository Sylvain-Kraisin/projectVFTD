<div class="text-center">
<h2 style="color:white" class="text-center craietext"><em>LE TABLEAU DE LA GLOIRE</em></h2>

<br>
<br>
<% i = 0 %>
<% @topten.each do |user| %>
<%= image_tag user.avatar.url(:thumb) %>
<% i += 1 %>
<h4 style="color:white" class="text-center craietext"> <%= i %>. <span style="color:#33cc33"> <%= user.username.upcase %> </span> <%= user.score.round(4)%> PTS <span style="color:red"> <%= user.average %> X <%= user.reponses.count %> </span></h4>

<% end %>
</div>

<br>
<br>

<% if user_signed_in? %>
  <% if current_user.average != nil %>
<h4 style="color:white" class="craietext"> TON SCORE = <%= current_user.score %> </h4>
  <% else %>
<h4 style="color:white" class="craietext"> FAIS AU MOINS 2 DEVOIRS POUR ETRE DANS LE CLASSEMENT </h4>
  <% end %>
<% else %>
  <h4 style="color:white" class="craietext"> FAIS AU MOINS 2 DEVOIRS POUR ETRE DANS LE CLASSEMENT </h4>
<% end %>
