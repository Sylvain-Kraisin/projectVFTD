<% @reponsus = Reponse.all %>
<%= @reponsus.count %>

<% @reponsus.each do |reponse| %>
  <% @user = User.where(username: reponse.user_username).first %>
  <% if @user.present? %>
    <% reponse.update user_id: @user.id %>
  <% else %>
    <p>nope</p>
  <% end %>
<% end %>

