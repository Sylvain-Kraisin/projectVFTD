<div class="col-xs-12 arcadetext pad_bot">


  <% i = 0 %>
  <% @topten.each do |user| %>
  <% @dst_notnill = Reponse.where("total is NOT NULL").where(user_username: user.username) %>

  <% i += 1 %>

  <div class="hidden-xs hidden-sm">
    <div class="col-xs-2 text-center">
    <h3 style="color:white" class=""> <%= i %> <span style="color:#33cc33"></h3>
    </div>
    <div class="col-xs-4 text-left">
      <h4 style="color:white" id="top10-margin"><%= image_tag user.avatar.url(:thumb), class:"topten_avatar" %> <%= user.username.first(12) %> </h4>
    </div>
    <div class="col-xs-2 text-center">
      <h3 style="color:white"><%= number_with_precision(user.average, precision: 2) %></h3>
    </div>
    <div class="col-xs-1 text-center">
      <h3 style="color:white">X<%= @dst_notnill.count %></h3>
    </div>
    <div class="col-xs-1 text-center">
      <h3 style="color:white">+<%= user.bonus %></h3>
    </div>
    <div class="col-xs-2 text-right">
      <h3 style="color:white"><%= (user.score).round %></h3>
    </div>
  </div>

  <div class="hidden-lg hidden-md">
    <div class="col-xs-2 text-center">
    <h4 style="color:white" class=""> <%= i %> <span style="color:#33cc33"></h4>
    </div>
    <div class="col-xs-5 text-center">
      <h4 style="color:white"><%= user.username.first(3) %> </h4>
    </div>

    <div class="col-xs-5 text-right">
      <h4 style="color:white"><%= (user.score).round %> </h4>
    </div>
  </div>

  <% end %>


</div>

